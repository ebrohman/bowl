#!/usr/bin/env ruby
require "bowl"

game = Bowl::Game.new

puts <<-STR
  Game started, start rolling.

STR

loop do
  if game.over?
    puts "Game Over ---- Score ---- #{game.score}"
    break
  end
  puts "\nFrame complete, Moving to Frame #{game.current_frame.frame_number + 1}" \
    if game.current_frame.finished?
  begin
    puts <<-STR
    How many pins?
    STR

    pins = gets.to_i
    game.roll( pins )
    rescue StandardError => e
      puts "#{e.message} \n"
      puts "Try rolling again"
    retry
  end
end
